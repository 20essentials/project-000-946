---
import Layout from "@/layouts/Layout.astro";
---

<Layout>
  <main class="container">
    <img src="/assets/github-image.avif" alt="You are LogIn">
    <h1>TU ESTAS LOGEADO</h1>
  </main>
</Layout>

<style>
  .container {
    width: 100%;
    height: 100vh;
    padding: 2vmax;
    position: relative;
  }

  h1 {
    color: #fff;
    position: absolute;
    left: 3vmax;
    top: 3vmax;
    font-family: Verdana, Geneva, Tahoma, sans-serif;
    font-size: 2.3vmax;
  }

  img {
    position: relative;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
</style>